<ul class="front-page-list  full small-block-grid-{{ sponsorship_max_level }}">
{% for post in posts | slice (0, sponsorship_max_level) %}
<li style="background:url('{{TimberImage( post.sponsor_logo ).src}}') center no-repeat;">
	<div class="box-content" >
	<h4><a href="{{post.link}}">{{  post.title}}</a></h4>
    	{{post.post_content | striptags | slice (0,200)}}
    	<footer>
		    <div class="sponsor-level-{{ post.sponsor_level_type }}">{{ post.sponsor_level_type }}</div> 
    	</footer>
  	</div>
  	<a href="{{post.link}}" class="button round btn btn-clr">{{ __("View Sponsor","hackedx-plugin") }}</a>
</li>

{% endfor %}
{% set leftover = sponsorship_max_level - (posts | slice (0, sponsorship_max_level) | length) %}
{% if  sponsorship_max_level > 0%}
{% for i in 1..leftover %}
<li>
	<div class="box-content no-sponsor">
	<h4 class="no-sponsor"><a class="no-sponsor" href="/contact">{{ __("No sponsor, yet","hackathon-theme")}}</a></h4>
    	<footer>
		    <div class="sponsor-level-{{ post.sponsor_level_type }} no-sponsor">{{ post.sponsor_level_type }}</div> 
    	</footer>
  	</div>
  	<a href="contact" class="btn btn-clr no-sponsor">{{ __("Sponsor Us","hackedx-plugin") }}</a>
</li>

{% endfor %}
{% endif %}
</ul>